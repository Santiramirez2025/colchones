{
  "name": "tiendacolchon",
  "version": "2.0.0",
  "description": "E-commerce de colchones premium con tecnología Multisac® - Landing page optimizada para conversión",
  "private": true,
  "author": {
    "name": "TiendaColchon",
    "url": "https://tiendacolchon.es"
  },
  "license": "UNLICENSED",
  "keywords": [
    "e-commerce",
    "colchones",
    "nextjs",
    "react",
    "typescript"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "db:seed": "tsx prisma/seed.ts",
    "dev:turbo": "next dev --turbo",
    "build": "next build",
    "build:analyze": "cross-env ANALYZE=true next build",
    "build:production": "npm run type-check && npm run lint && npm run build",
    "start": "next start",
    "start:production": "cross-env NODE_ENV=production next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,css}\"",
    "clean": "rm -rf .next out node_modules/.cache",
    "clean:all": "rm -rf .next out node_modules node_modules/.cache package-lock.json && npm install",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:reset": "prisma migrate reset",
    "postinstall": "prisma generate",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test:run && npm run test:e2e",
    "test:lighthouse": "npm run build && npm run start & sleep 5 && lighthouse http://localhost:3000 --view --only-categories=performance,accessibility,best-practices,seo",
    "test:size": "du -sh .next/static && du -sh .next/server",
    "analyze:bundle": "npm run build:analyze",
    "check": "npm run type-check && npm run lint && npm run format:check",
    "pretest": "npm run type-check && npm run lint",
    "prepare": "husky install || true",
    "precommit": "npm run lint && npm run type-check",
    "prepush": "npm run check",
    "validate": "npm run check && npm run build"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@dataconnect/generated": "file:src/dataconnect-generated",
    "@mercadopago/sdk-react": "^1.0.6",
    "@prisma/client": "^6.19.0",
    "@stripe/react-stripe-js": "^5.3.0",
    "@stripe/stripe-js": "^8.2.0",
    "@vercel/analytics": "^1.5.0",
    "bcryptjs": "^3.0.3",
    "canvas-confetti": "^1.9.4",
    "critters": "^0.0.23",
    "firebase": "^12.5.0",
    "firebase-admin": "^13.5.0",
    "framer-motion": "^11.18.2",
    "glob": "^11.0.3",
    "lucide-react": "^0.445.0",
    "mercadopago": "^2.10.0",
    "next": "^15.0.3",
    "next-auth": "^5.0.0-beta.30",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "rimraf": "^6.1.0",
    "sharp": "^0.34.4",
    "stripe": "^19.2.0",
    "supertest": "^7.1.4",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.0.3",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/canvas-confetti": "^1.9.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.18.13",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.0.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.6",
    "jsdom": "^27.1.0",
    "jsonwebtoken": "^9.0.2",
    "msw": "^2.12.1",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "prisma": "^6.18.0",
    "tailwindcss": "^3.4.13",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3",
    "vitest": "^4.0.8"
  },
  "optionalDependencies": {
    "@next/swc-darwin-arm64": "^15.0.3",
    "@next/swc-darwin-x64": "^15.0.3",
    "@next/swc-linux-x64-gnu": "^15.0.3",
    "@next/swc-win32-x64-msvc": "^15.0.3"
  },
  "packageManager": "npm@10.2.3",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
